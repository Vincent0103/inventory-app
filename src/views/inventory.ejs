<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
    <title>Inventory | Y2Plush</title>
  </head>
  <body
    class="font-montserrat text-text-light fill-text-light from-secondary to-secondary-dark min-h-screen w-full bg-linear-to-b before:pointer-events-none before:fixed before:inset-0 before:-z-10 before:bg-[url('/images/wallpapers/homepage-bgi.png')] before:bg-repeat before:opacity-[0.03] before:content-['']"
  >
    <%- include("partials/navbar.ejs") %>
    <main>
      <section
        class="border-border-dark from-primary to-primary-dark fixed top-22 h-[calc(100vh-105px)] w-[200px] overflow-y-scroll rounded-r-xl border-y-2 border-r-2 bg-linear-to-b p-1 font-semibold"
      >
        <%- include("partials/category.ejs") %>
      </section>
      <section class="mt-[67px] ml-[200px] flex flex-wrap gap-10 p-6">
        <% items.forEach((item) => { %> <%- include("partials/itemCard.ejs",
        {...item}) %> <% }); %>
      </section>
    </main>
    <script>
      const toggleFilter = (e, categoryId) => {
        const list = document.getElementById(categoryId);
        const svg = e.target.closest("BUTTON").querySelector("svg");
        svg.classList.toggle("-rotate-180");
        list.classList.toggle("max-h-0");
        list.classList.toggle("max-h-96");
        list.classList.toggle("p-0");
        list.classList.toggle("py-2");
      };

      const updatePriceFilterValue = (e) => {
        const filterPriceValue = document.getElementById("filter-price-value");
        const { value, max } = e.target;
        filterPriceValue.textContent = ((value !== max) ? "<" : ">").concat(` ${value}â‚¬`);
      };
    </script>
  </body>
</html>
