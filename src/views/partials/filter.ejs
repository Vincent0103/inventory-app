<button
  onclick="toggleFilter(event, '<%= filterName %>-options')"
  type="button"
  class="flex cursor-pointer items-center gap-2"
>
  <svg
    class="<% if (locals?.userInputs && !!userInputs[filterName]) { %> -rotate-180 <% } %> mx-1.5 size-6 transition-transform"
    xmlns="http://www.w3.org/2000/svg"
    viewBox="0 0 24 24"
  >
    <path d="M7.41,8.58L12,13.17L16.59,8.58L18,10L12,16L6,10L7.41,8.58Z" />
  </svg>
  <h3 class="text-md"><%= toTitleCase(filterName) %></h3>
</button>
<ul
  class="<% if (locals?.userInputs && !!userInputs[filterName]) { %> max-h-96 py-2 <% } else { %> max-h-0 p-0 <% } %> space-y-1 overflow-hidden pl-8 font-normal transition-all"
  id="<%= filterName %>-options"
>
  <% list.forEach((item) => { %>
  <li class="space-x-2">
    <input
      type="checkbox"
      name="<%= filterName %>"
      value="<%= item.value %>"
      id="<%= item.value %>"
      aria-label="<%= item.name %> <%= toTitleCase(filterChildName) %> filter"
      <% if (locals?.userInputs && [].concat(userInputs[filterName]).includes(item.value)) { %>
        checked
      <% } %>
    />
    <span><%= item.name %></span>
  </li>
  <% }); %>
</ul>
