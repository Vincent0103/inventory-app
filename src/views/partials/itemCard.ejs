<a
  class="text-sm relative bg-neutral-bg shadow-md p-1.5 border-neutral-border text-neutral-text-dark h-96 w-52 max-h-96 border-2 font-medium hover:brightness-90 cursor-pointer"
  href="/inventory/<%= urlName %>"
>
  <img
    class="h-3/5 w-full object-cover object-center"
    src="<%= imgSrc %>"
    alt="<%= imgAlt %>"
  />
  <h3 class="font-medium mt-2"><%= name %></h3>
  <p class="font-bold text-xl"><%= formatPrice(price) %></p>
  <div class="flex flex-wrap mt-2 gap-1">
    <% tags.forEach(tag => { %>
      <%- include('tag', {...tag}) %>
    <% }); %>
  </div>
  <small class="absolute bottom-0 right-0 py-0.5 px-1 text-neutral-text-muted"><%= amountAvailable %> available</small>
</a>
