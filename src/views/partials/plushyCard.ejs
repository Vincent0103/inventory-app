<a
  class="bg-neutral-bg border-neutral-border text-neutral-text-dark relative h-72 max-h-96 w-40 cursor-pointer border-2 p-1.5 text-sm font-medium shadow-md hover:brightness-90 sm:h-96 sm:w-52"
  href="/inventory/<%= slug %>"
>
  <img
    class="h-3/5 w-full object-cover object-center"
    src="<%= imgSrc %>"
    alt="<%= imgAlt %>"
  />
  <h3 class="mt-2 text-xs font-medium sm:text-sm"><%= name %></h3>
  <p class="text-md font-bold sm:text-xl"><%= formatPrice(price) %></p>
  <div class="mt-1 flex flex-wrap gap-1">
    <% categories.slice(0, 2).forEach((category, index) => { %> <%-
    include('tag', {...category}) %> <% }); %> <% if (categories.length > 2) {
    %>
    <span
      class="text-neutral-text-muted self-center text-xs font-semibold tracking-wider sm:ml-1 sm:text-sm"
      >+<%= categories.length - 2 %></span
    >
    <% } %>
  </div>
  <small class="text-neutral-text-muted absolute right-0 bottom-0 px-1 py-0.5"
    ><%= amountAvailable %> available</small
  >
</a>
